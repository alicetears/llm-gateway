{
  "version": 2,
  "buildCommand": "npx prisma generate && npx prisma db push --accept-data-loss && mkdir -p public",
  "outputDirectory": "public",
  "installCommand": "npm install",
  "functions": {
    "api/**/*.ts": {
      "memory": 1024,
      "maxDuration": 60
    }
  },
  "rewrites": [
    {
      "source": "/api/auth/(.*)",
      "destination": "/api/auth"
    },
    {
      "source": "/api/tokens/(.*)",
      "destination": "/api/tokens"
    },
    {
      "source": "/api/tokens",
      "destination": "/api/tokens"
    },
    {
      "source": "/api/(.*)",
      "destination": "/api/index"
    },
    {
      "source": "/health/(.*)",
      "destination": "/api/health"
    },
    {
      "source": "/health",
      "destination": "/api/health"
    }
  ]
}
