# Server Configuration
NODE_ENV=development
PORT=3000
HOST=0.0.0.0

# Database
DATABASE_URL="postgresql://user:password@localhost:5432/llm_gateway?schema=public"

# Redis
REDIS_URL="redis://localhost:6379"

# API Configuration
API_KEY_HEADER=x-api-key
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW_MS=60000

# Key Selection Strategy: "exhaust-first" | "round-robin"
KEY_SELECTION_STRATEGY=exhaust-first

# Logging
LOG_LEVEL=info

# Optional: Default provider if none specified
DEFAULT_PROVIDER=auto

# Optional: Enable response headers with metadata
ENABLE_LLM_HEADERS=true
